<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Aqui creo el layout principal-->
    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="0dp"
        android:background="#04f4f0"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <!--Aqui ingreso la imagen del logo de la U-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:id="@+id/logoufg"
            app:srcCompat="@drawable/ufglogocorporativvohorizontal"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!--Aqui agrego la imagen de mi foto-->
            <ImageView
                android:id="@+id/fotomichaeltorres"
                android:layout_width="104dp"
                android:layout_height="101dp"
                app:srcCompat="@drawable/michaeltorres" />

            <TextView
                android:id="@+id/bioname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="0dp"
                android:text="Michael Fernando Torres Callejas"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/biotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="30dp"
                android:gravity="start|top"
                android:inputType="text|textMultiLine"
                android:maxEms="15"
                android:minLines="15"
                android:text="Estudiante de ingenieria en Desarrollo de Software en la Universidad Francisco Gavidia, Tengo 21 aÃ±os, fundador de PaveEnergy Technologies."/>


        </RelativeLayout>

        <ImageView
            android:layout_width="239dp"
            android:layout_height="516dp"
            android:id="@+id/androidicon"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/androidbrazocruzado"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>